name: basic_cleaning
conda_env: conda.yml

entry_points:
  main:
    parameters:
      input_artifact:
        description: Input artifact with the raw dataset
        type: string

      output_artifact:
        description: Output artifact for the cleaned dataset
        type: string

      output_type:
        description: Type of the output artifact
        type: string

      output_description:
        description: Description of the output artifact
        type: string

      min_price:
        description: Minimum price threshold
        type: float

      max_price:
        description: Maximum price threshold
        type: float

    command: >
      python run.py 
      --input_artifact {input_artifact}
      --output_artifact {output_artifact}
      --output_type {output_type}
      --output_description {output_description}
      --min_price {min_price}
      --max_price {max_price}
